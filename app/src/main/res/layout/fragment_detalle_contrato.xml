<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”¹ TÃ­tulo de la pantalla -->
        <TextView
            android:id="@+id/tvTituloContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles del Contrato"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- ðŸ”¸ Fecha Inicio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Inicio:"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:inputType="date"/>

        <!-- ðŸ”¸ Fecha Fin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha FinalizaciÃ³n:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:inputType="date"/>

        <!-- ðŸ”¸ Monto Alquiler -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto Alquiler:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:inputType="numberDecimal"/>

        <!-- ðŸ”¸ Inquilino -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inquilino:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:inputType="textPersonName"/>

        <!-- ðŸ”¸ DirecciÃ³n del Inmueble -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n del Inmueble:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:inputType="textPostalAddress"/>

        <Button
            android:id="@+id/btnVerPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Pagos"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
