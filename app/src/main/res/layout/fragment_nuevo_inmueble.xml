<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/ivDetalleImagen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@android:color/darker_gray"
            android:contentDescription="Imagen del inmueble"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen" />

        <!-- Campos con títulos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese dirección" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uso"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etUso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Residencial, Comercial..." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Casa, Departamento..." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambientes"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etAmbientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad de ambientes"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Superficie"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etSuperficie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Superficie en m²"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor en pesos"
            android:inputType="numberDecimal" />

        <Switch
            android:id="@+id/switchDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Habilitar inmueble" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarInmueble"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Guardar Inmueble" />
    </LinearLayout>
</ScrollView>
