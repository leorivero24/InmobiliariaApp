<resources>

    <!-- Tema principal -->
    <style name="Theme.Inmobiliaria" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <!-- Tema sin ActionBar para MenuActivity -->
    <style name="Theme.Inmobiliaria.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
    </style>


</resources>
